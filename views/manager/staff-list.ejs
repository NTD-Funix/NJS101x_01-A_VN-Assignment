            <main class="py-0">
                <div class="grid">
                    <article class="card index-item">
                        <header class="card__header row pb-0">
                            <h4 class="text-center mb-4"><em>Danh sách nhân viên</em></h4>
                        </header>
                        <hr>
                        <div class="table-responsive">
                            <table class="table table-bordered" style="border: 1px solid green">
                                <thead>
                                    <tr class="table-success text-center">
                                        <th style="width: 20%">ID nhân viên</th>
                                        <th style="width: 20%">Họ và tên</th>
                                        <th style="width: 20%">Ngày sinh</th>
                                        <th style="width: 20%">Ngày vào công ty</th>
                                        <th style="width: 20%">Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% employees.forEach(employee => { %>
                                    <tr class="text-center">
                                        <td><%= employee._id %></td>
                                        <td><%= employee.name %></td>
                                        <td><%= employee.doB %></td>
                                        <td><%= employee.startDate %></td>
                                        <td class="m-0">
                                            <a href="<%= path %>/view/<%= employee._id %>" class="btn btn-success w-auto">View</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </article>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>