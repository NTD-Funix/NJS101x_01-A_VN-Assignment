<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/index.css" />
</head>

  <body>
    <%- include('../includes/navigation.ejs') %>
      <main>
        <div class="grid">
          <article class="card index-item" style="width:800px">
            <header class="card__header">
              <h2 class="index__title">Chào Mừng <%= employee.name %></h2>
            </header>
            <hr class="m-0">
            <div class="row m-2">
              <div class="col-md-4 mb-4 align-self-center">
                <img
                  src="<%= employee.imageUrl %>"
                  alt="Ảnh đại diện"
                  style="width: 80%; display: block; margin:auto"
                />
              </div>
              <div class="col-md-8">
                <div class="mb-3 mx-3 row">
                    <label for="employeeId" class="col-md-4">ID:</label>
                    <input type="text" class="col-md-8" id="employeeId" name="employeeId" value="<%= employee._id %>" disabled>
                </div>
                <div class="mb-3 mx-3 row">
                    <label for="name" class="col-md-4">Họ và tên:</label>
                    <input type="text" class="col-md-8" id="name" name="name" value="<%= employee.name %>" disabled>
                </div>
                <div class="mb-3 mx-3 row">
                    <label for="department" class="col-md-4">Phòng ban:</label>
                    <input type="text" class="col-md-8" id="department" name="department" value="<%= employee.department %>" disabled>
                </div>
                <div class="mb-3 mx-3 row">
                    <label for="status" class="col-md-4">Trạng thái:</label>
                    <input type="text" class="col-md-8" value="<%= status === 1 ? 'Đang làm việc' : 'Không làm việc'%>" disabled>
                </div>
              </div>
            </div>
            <hr class="m-0">
            <div class="row m-4">
              <div class="col-sm-4 mb-2">
                <a href="/checkin-form" class="btn btn-success <%= status === 1 ? 'disabled' : '' %>">Điểm danh</a>
              </div>
              <div class="col-sm-4 mb-2">
                <form action="check-out" method="POST"> 
                    <button type="submit" class="btn btn-danger <%= status === 0 ? 'disabled' : '' %>">Kết thúc làm</button>
                </form>
              </div>
              <div class="col-sm-4 mb-2">
                <a href="/annualLeave" class="btn btn-primary">Nghỉ phép</a>
              </div>
            </div>
          </article>
        </div>
      </main>
<%- include('../includes/end.ejs') %>
