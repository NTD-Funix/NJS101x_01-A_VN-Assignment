<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/index.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="grid">
            <article class="card index-item ">
                <header class="card__header">
                    <h1 class="index__title">Checkout Info</h1>
                </header>
                <hr>
                <div class="container">
                    <% if(todayWorkingInfo) { %>
                    <h4>Số giờ đã làm hôm nay: <%= totalTimeOfDay %> giờ</h4>
                    <div class="mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr class="table-success text-center">
                                    <th>STT</th>
                                    <th>Thời gian bắt đầu</th>
                                    <th>Thời gian kết thúc</th>
                                    <th>Nơi làm việc</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% todayWorkingInfo.workingTimes.forEach(item => { %>
                                <tr class="text-center">
                                    <td><%= todayWorkingInfo.workingTimes.indexOf(item) + 1 %></td>
                                    <td><%= item.startTime.toISOString() %></td>
                                    <td><%= item.endTime.toISOString() %></td>
                                    <td><%= item.workPlace %></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <h4>Trạng thái: <%= status === 1 ? 'Đang làm việc' : 'Không làm việc'%></h4>
                    <hr>
                    <div class="row">
                        <div class="col-sm-6 mb-3 text-center">
                            <a href="/checkin-form" class="btn btn-success <%= status === 1 ? 'disabled' : ''; %>">Điểm danh</a>
                        </div>
                        <div class="col-sm-6 mb-3 text-center">
                            <a href="/" class="btn btn-primary">Trang chủ</a>
                        </div>
                    </div>
                    <% } else { %>
                        <h4>Chưa có dữ liệu!</h4>
                    <% } %>
                </div>
            </article>
        </div>
    </main>
<%- include('../includes/end.ejs') %>


