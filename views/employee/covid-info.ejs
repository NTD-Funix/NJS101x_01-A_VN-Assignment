<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/index.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <div class="grid">
        <article class="card index-item">
          <header class="card__header">
            <h1 class="index__title">Thông tin COVID-19 cá nhân</h1>
          </header>
          <hr>
          <div class="row px-3">
            <div class="col-lg-4">
                <h5 class="text-center">Thông tin thân nhiệt</h5>
                <hr>
                <% if (temps.length > 0) { %>
                    <table class="table table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th>Ngày/giờ đăng ký</th>
                            <th>Nhiệt độ (độ C)</th>
                        </tr>
                    </thead>
                        <tbody>
                            <% for(let temp of temps) { %>
                                <tr class="<%= temp.tempValue >= '38.5' ? 'table-danger' : 'table-success' %>">
                                    <td><%= temp.tempDate %></td>
                                    <td><%= temp.tempValue %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>Chưa có dữ liệu</p>
                <% } %>
            </div>
            <div class="col-lg-4">
                <h5 class="text-center">Thông tin tiêm Vaccine</h5>
                <hr>
                <% if (vaccinations.length > 0) { %>
                    <table class="table table-bordered">
                    <thead class="table-success">
                        <tr>
                            <th>Mũi Vaccine</th>
                            <th>Loại Vaccine</th>
                            <th>Ngày tiêm</th>
                        </tr>
                    </thead>
                        <tbody>
                            <% for(let vaccination of vaccinations) { %>
                                <tr>
                                    <td><%= vaccination.vaccinationTimes %></td>
                                    <td><%= vaccination.vaccineType %></td>
                                    <td><%= vaccination.vaccinationDate %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>Chưa có dữ liệu</p>
                <% } %>
            </div>
            <div class="col-lg-4">
                <h5 class="text-center">Thông tin dương tính</h5>
                <hr>
                <% if (positives.length > 0) { %>
                    <table class="table table-bordered">
                    <thead class="table-danger">
                        <tr>
                            <th>Lần nhiễm</th>
                            <th>Ngày nhiễm</th>
                        </tr>
                    </thead>
                        <tbody>
                            <% for(let positive of positives) { %>
                                <tr>
                                    <td><%= positive.positiveTimes %></td>
                                    <td><%= positive.positiveDate %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>Chưa có dữ liệu</p>
                <% } %>
            </div>
          </div>
          <hr>
          <div class="row mx-2">
            <div class="col-md-4 mb-3">
                <a href="/registerTemp" class="btn btn-success">Đăng ký thông tin thân nhiệt</a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/registerVaccination" class="btn btn-primary">Đăng ký thông tin tiêm Vaccine</a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="/registerPositive" class="btn btn-danger">Đăng ký thông tin dương tính với COVID-19</a>
            </div>
          </div>
        </article>
      </div>
    </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../includes/end.ejs') %>
