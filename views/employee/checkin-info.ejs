<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/index.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="grid">
            <article class="card index-item" style="width:700px">
                <header class="card__header">
                    <h1 class="index__title">Checkin Info</h1>
                </header>
                <hr>
                <div class="container">
                    <form action="check-out" method="POST">
                        <div class="mb-3 row">
                            <label class="col-md-4" for="name">Họ và tên:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="<%= employee.name %>" disabled>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-4" for="workPlace">Nơi làm việc:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="<%= employee.workingTime.workPlace %>" disabled>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-4" for="startTime">Thời gian bắt đầu: </label>
                            <div class="col-md-8">
                                <input type="text" 
                                    class="form-control" 
                                    value="<%= employee.workingTime.startTime.toISOString() %>" 
                                    disabled >
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-4" for="status">Trạng thái: </label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" value="<%= employee.status === 1 ? 'Đang làm việc' : 'Không làm việc' %>" disabled>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-6 text-center mb-3">
                                <a href="/" class="btn btn-primary w-75" >Trang chủ</a>
                            </div>
                            <div class="col-md-6 text-center ">
                                <button type="submit" class="btn btn-danger mb-3 w-75">Kết thúc làm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../includes/end.ejs') %>